<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_todo_name"
        android:layout_toStartOf="@+id/iv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="10dp"

        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_todo_date"
        android:layout_below="@+id/tv_todo_name"
        android:layout_width="90dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="00/00/0000"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/dash"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_todo_name"
        android:layout_toEndOf="@id/tv_todo_date"
        android:focusable="false"
        android:textAlignment="center"
        android:text="-"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tv_todo_date1"
        android:layout_below="@+id/tv_todo_name"
        android:layout_toRightOf="@id/dash"
        android:layout_width="90dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightGray"
        android:focusable="false"
        android:text="00/00/0000"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"

        android:src="@drawable/ic_vertical_dot"/>

</RelativeLayout>