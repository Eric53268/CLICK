<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowLayoutReservationsV2">

    <TextView
        android:id="@+id/displayReservationNameV2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="John Smith"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/displayPaxV2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/displayPaxV2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="20"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/displayCheckInDateV2"
        app:layout_constraintStart_toEndOf="@+id/displayReservationNameV2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayCheckInDateV2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="10/2/2021"
        android:textSize="15sp"
        android:layout_marginEnd="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/displayPaxV2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>